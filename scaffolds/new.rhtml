<h1>Create new <%= @scaffold_singular_name.gsub('_', ' ') %></h1>

<%= error_messages_for(@scaffold_singular_name) %>
<%= form(@scaffold_singular_name, :action=>"create"+@scaffold_suffix, :submit_value=>"Create #{@scaffold_singular_name.humanize.downcase}") %><br />
<%= link_to("Manage #{@scaffold_plural_name.humanize.downcase}", :action => "manage#{@scaffold_suffix}") if @scaffold_methods.include?(:manage) %>
