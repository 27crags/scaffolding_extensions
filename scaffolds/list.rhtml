<h1>Choose <%= @scaffold_singular_name.humanize.downcase %> to <%= @scaffold_action %></h1>

<form action="<%= url_for(:action=>"#{@scaffold_action}#{@scaffold_suffix}") %>" method="post">
<select name="id">
<option value=''>&nbsp;</option>
<%= options_from_collection_for_select(@scaffold_plural_object, :id, :scaffold_name) %>
</select>

<br /><br />
<input type="submit" value="<%= @scaffold_action.capitalize %> <%= @scaffold_singular_name.humanize.downcase %>" />
</form>

<%= manage_link %>
